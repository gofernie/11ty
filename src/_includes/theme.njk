{# Safe stub macros so imports don't fail #}
{% macro pill(text) %}<span class="pill">{{ text }}</span>{% endmacro %}

{% macro button(url, label, brand=false) %}
  <a href="{{ url }}" class="btn{% if brand %} brand{% endif %}">{{ label }}</a>
{% endmacro %}

{% macro cta(title, body="", url="#", label="Learn more", brand=false) %}
  <div class="cta">
    <h3>{{ title }}</h3>
    {% if body %}<p>{{ body }}</p>{% endif %}
    {{ button(url, label, brand) }}
  </div>
{% endmacro %}
