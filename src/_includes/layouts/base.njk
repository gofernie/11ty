<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title or "Fernie Real Estate" }}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <style>
    :root { --ink:#0f172a; --bg:#fff; --muted:#64748b; }
    html,body{margin:0;padding:0;background:var(--bg);color:var(--ink);font:16px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial;}
    .container{max-width:1200px;margin:0 auto;padding:0 1rem;}
    header.site{border-bottom:1px solid #e5e7eb;}
    header .container{display:flex;gap:.75rem;align-items:center;justify-content:space-between;padding:0.75rem 1rem;}
    a{color:inherit;text-decoration:none}
    nav a{opacity:.9}
    nav a:hover{opacity:1;text-decoration:underline}

    /* HERO */
    .hero{position:relative;display:block;width:100%;min-height:44vh;}
    .hero picture, .hero img{position:absolute;inset:0;width:100%;height:100%;object-fit:cover;}
    .hero::after{content:"";position:absolute;inset:0;background:linear-gradient(0deg, rgba(0,0,0,.45), rgba(0,0,0,.10));}
    .hero__inner{position:relative;z-index:1;display:flex;align-items:flex-end;height:100%;}
    .hero__content{padding:2.5rem 1rem 2.75rem;color:#fff;}
    .hero h1{margin:0 0 .5rem 0;font-size:clamp(2rem,5vw,3rem);line-height:1.1;}
    .hero p{margin:.25rem 0 0 0;max-width:55ch;opacity:.95}
    main{padding:2rem 0;}
  </style>
</head>
<body>
  <header class="site">
    <div class="container">
      <a href="/">Fernie Real Estate</a>
      <nav>
        <a href="/">Home</a>
        <a href="/neighbourhoods/">Neighbourhoods</a>
        <a href="/contact/">Contact</a>
      </nav>
    </div>
  </header>

  {% if hero and hero.src %}
  <section class="hero" aria-label="{{ hero.alt or 'Hero' }}">
    <picture>
      <source srcset="{{ hero.src }}" type="image/webp">
      <img src="{{ hero.fallback or hero.src }}" alt="{{ hero.alt or 'Hero image' }}" loading="eager" fetchpriority="high">
    </picture>
    <div class="hero__inner container">
      <div class="hero__content">
        {% if hero.title %}<h1>{{ hero.title | safe }}</h1>{% endif %}
        {% if hero.subtitle %}<p>{{ hero.subtitle | safe }}</p>{% endif %}
      </div>
    </div>
  </section>
  {% endif %}

  <main class="container">
    {{ content | safe }}
  </main>
</body>
</html>
