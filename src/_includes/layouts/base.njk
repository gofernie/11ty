<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{% if title %}{{ title }} · {% endif %}Fernie Real Estate</title>
  <link rel="stylesheet" href="/css/theme.css" />
</head>
<body>

  <!-- Sticky site header -->
  <header class="site-header">
    <div class="container header-inner">
      <!-- Left: text logo -->
      <a class="brand" href="/">Fernie Real Estate</a>

      <!-- Right: primary nav -->
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/neighbourhoods/">Neighbourhoods</a>
      </nav>
    </div>
  </header>

  <!-- Main content -->
  <main id="main">
    {{ content | safe }}
  </main>

  <!-- Site footer -->
  <footer class="site-footer">
    <div class="container">
      <small>© Fernie Real Estate</small>
    </div>
  </footer>

</body>
</html>
