<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title or "Site" }}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
</head>
<body>
  {# HERO (optional) #}
  {% if hero and hero.src %}
  <picture>
    <source srcset="{{ hero.src }}" type="image/webp">
    <img src="{{ hero.fallback or hero.src }}" alt="{{ hero.alt or 'Hero' }}">
  </picture>
  {% endif %}

  <main>
    {{ content | safe }}
  </main>
</body>
</html>
