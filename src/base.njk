{# src/base.njk #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or "Fernie Neighbourhoods" }}</title>

  {# Properly link your external CSS file #}
  <link rel="stylesheet" href="/css/site.css" />

  {# Optional: inline theme tokens if they exist #}
  {% if collections and collections.all %}
    {% include "css/theme.njk" ignore missing %}
  {% endif %}
</head>
<body>
  <header>
    <a class="brand" href="/">Fernie</a>
    <nav>
      <a href="/">Home</a>
      <a href="/neighbourhoods/">Neighbourhoods</a>
    </nav>
  </header>

  {% block top %}{% endblock %}

  <main>
    {% block content %}
      {{ content | safe }}
    {% endblock %}
  </main>

  <footer>
    <small>&copy; {% year %} Fernie</small>
  </footer>
</body>
</html>
