{# src/base.njk #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or "Fernie Neighbourhoods" }}</title>

  {# External stylesheet (copied via passthrough to /css) #}
  <link rel="stylesheet" href="/css/site.css" />

  {# Optional inline theme tokens (from src/css/theme.njk) #}
  {% if collections and collections.all %}
    {% include "css/theme.njk" ignore missing %}
  {% endif %}

  <style>
    /* Minimal safe defaults so nothing looks broken during bring-up */
    :root{--ink:#0f172a;--bg:#fff;--muted:#64748b}
    *{box-sizing:border-box}
    body{margin:0;font:16px/1.6 system-ui,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial,sans-serif;color:var(--ink);background:var(--bg)}
    header,main,footer{max-width:1200px;margin:auto;padding:1.25rem}
    header{display:flex;gap:1rem;align-items:center;justify-content:space-between}
    .brand{font-weight:700}
    nav a{margin-right:1rem;opacity:.9;text-decoration:none}
    nav a:hover{opacity:1;text-decoration:underline}
    .hero{border-radius:16px;overflow:hidden}
    .hero img{display:block;width:100%;height:auto}
  </style>
</head>
<body>
  <header>
    <a class="brand" href="/">Fernie</a>
    <nav>
      <a href="/">Home</a>
      <a href="/neighbourhoods/">Neighbourhoods</a>
    </nav>
  </header>

  {% block top %}
  {# Optional area above main content (e.g., page hero) #}
  {% endblock %}

  <main>
    {% block content %}
      {{ content | safe }}
    {% endblock %}
  </main>

  <footer>
    <small>&copy; {{ (collections.all | first | date("yyyy")) or "2025" }} Fernie</small>
  </footer>
</body>
</html>
