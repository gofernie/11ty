<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or "Fernie Neighbourhoods" }}</title>

  <!-- Load external CSS normally -->
  <link rel="stylesheet" href="/css/site.css" />

  <!-- If theme.njk exists, FORCE it to be CSS by wrapping in <style> -->
  {% if collections and collections.all %}
    <style>{% include "css/theme.njk" ignore missing %}</style>
  {% endif %}
</head>
<body>
  <header class="site-header">
    <a class="brand" href="/">Fernie</a>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/neighbourhoods/">Neighbourhoods</a>
    </nav>
  </header>

  {% block top %}{% endblock %}

  <main class="container">
    {% block content %}{{ content | safe }}{% endblock %}
  </main>

  <footer class="container">
    <small>&copy; {% year %} Fernie</small>
  </footer>
</body>
</html>
