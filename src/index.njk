{# === THREE FEATURE CARDS === #}
<section class="section">
  <div class="container">
    <div class="cards">
      <article class="card">
        <h3>Personalized Search</h3>
        <p>Curated neighbourhood insights to match your lifestyle, budget, and timeline.</p>
        <a class="btn btn--outline" href="{{ '/neighbourhoods/' | url }}">Explore homes</a>
      </article>

      <article class="card">
        <h3>Financial Tools</h3>
        <p>Get mortgage-ready with quick calculators and first-time buyer guides.</p>
        <a class="btn btn--outline" href="{{ '/neighbourhoods/' | url }}">Get pre-approved</a>
      </article>

      <article class="card">
        <h3>Local Expertise</h3>
        <p>Lean on trusted local pros and smooth the path from search to closing.</p>
        <a class="btn btn--outline" href="{{ '/neighbourhoods/' | url }}">Talk to an expert</a>
      </article>
    </div>
  </div>
</section>

{# === NEIGHBOURHOOD TEASER GRID (first 6) === #}
<section class="section">
  <div class="container">
    <h2>Neighbourhood Highlights</h2>
    <div class="cards">
      {% set list = (neighbourhoods | default([])).slice(0, 6) %}
      {% for n in list %}
        {% if n.slug %}
          <a class="card" href="{{ '/neighbourhoods/' | url }}{{ n.slug | slug }}/">
            <h3>{{ n.title }}</h3>
            {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <p style="margin-top:1.25rem">
      <a class="btn btn--primary" href="{{ '/neighbourhoods/' | url }}">See all neighbourhoods</a>
    </p>
  </div>
</section>
