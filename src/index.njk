<h1>Neighbourhoods</h1>
<p class="lead">Browse all neighbourhood guides.</p>

<div class="card-grid">
{% for n in (neighbourhoods | sort(attribute="order")) %}
  <a class="wcard" href="/neighbourhoods/{{ n.slug }}/">
    <figure class="wcard-media">
      {% set alt = (n.title or n.name) ~ ' overview' %}
      {% if n.hero_image %}
        {% optimizedImage n.hero_image, alt, [480,720,960,1200], "(max-width: 1200px) 100vw, 33vw" %}
      {% else %}
        <div class="wcard-placeholder"></div>
      {% endif %}
      <figcaption><h3>{{ n.title }}</h3></figcaption>
    </figure>
    <div class="wcard-intro">
      {{ (n.desc or n.about) | striptags | truncate(220) }}
      {% if n.tags %}
      <div class="pills">
        {% for t in (n.tags | split(',')) %}
          {% if t | trim %}<span class="pill">{{ t | trim }}</span>{% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </a>
{% endfor %}
</div>
