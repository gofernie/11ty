<h2>Featured neighbourhoods</h2>
<div class="mini-grid">
{% set sorted = neighbourhoods | sort(attribute="order") %}
{% for n in sorted %}
  {% if loop.index <= 3 %}
    <a class="wcard" href="/neighbourhoods/{{ n.slug }}/">
      <figure class="wcard-media" style="aspect-ratio:4/3">
        {% set alt = (n.title or n.name) ~ ' overview' %}
        {% if n.hero_image %}
          {% optimizedImage n.hero_image, alt, [480,720,960,1200], "(max-width: 1200px) 100vw, 25vw" %}
        {% else %}
          <div class="wcard-placeholder"></div>
        {% endif %}
        <figcaption><h3>{{ n.title }}</h3></figcaption>
      </figure>
    </a>
  {% endif %}
{% endfor %}
</div>
