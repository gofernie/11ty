---
title: Neighbourhoods
layout: base.njk
---

<h1>Neighbourhoods</h1>
<p class="lead">Browse all neighbourhood guides.</p>

<div class="card-grid">
{% for n in neighbourhoods %}
  <a class="wcard" href="/neighbourhoods/{{ n.slug }}/">
    <figure class="wcard-media">
      {% set img = n.thumb or n.hero_image %}
      {% if img %}
        {% set alt = (n.title or n.name) ~ ' thumbnail' %}
        {% optimizedImage img, alt, [480, 720, 960, 1080], "(max-width: 1080px) 100vw, 33vw" %}
      {% else %}
        <div class="wcard-placeholder" aria-hidden="true"></div>
      {% endif %}
      <figcaption>
        <h3>{{ n.title }}</h3>
        {% if n.tags %}
          <div class="pills">
            {% for t in (n.tags | split(',')) %}
              {% if t %}<span class="pill">{{ t }}</span>{% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </figcaption>
    </figure>
    {% if n.intro %}<p class="wcard-intro">{{ n.intro }}</p>{% endif %}
  </a>
{% endfor %}
</div>
