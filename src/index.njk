{# Full-bleed hero with your image #}
<section
  class="hero"
  style="background-image:url('https://private-office.myrealpage.com/w/w=chris-crump2.myrealpagewebsite.com,m=__manage__/_media/quick-uploads/stock/ty5.jpeg?inline=true');"
>
  <div class="container hero-inner">
    <h1>Find Your Place in Fernie</h1>
    <p class="lead">
      Explore neighbourhood guides, local insights, and listings—fast and lightweight with Eleventy.
    </p>
    <a class="cta" href="/neighbourhoods/">Browse Neighbourhoods</a>
  </div>
</section>

{# Feature cards #}
<section class="section">
  <div class="container">
    <div class="cards">
      <article class="card">
        <h3>Personalized Search</h3>
        <p>Curated neighbourhood insights to match your lifestyle, budget, and timeline.</p>
      </article>
      <article class="card">
        <h3>Financial Tools</h3>
        <p>Get mortgage-ready with quick calculators and first-time buyer guides.</p>
      </article>
      <article class="card">
        <h3>Local Expertise</h3>
        <p>Lean on trusted local pros and smooth the path from search to closing.</p>
      </article>
    </div>
  </div>
</section>

{# Neighbourhood highlights (first 6 from data) #}
<section class="section">
  <div class="container">
    <h2 class="mt-0">Neighbourhood Highlights</h2>
    <p class="sub">A quick taste of Fernie’s areas. Dive deeper to see them all.</p>

    <div class="cards">
      {% set list = neighbourhoods | slice(0,6) %}
      {% for n in list %}
        {% if n.slug %}
          <a class="card" href="/neighbourhoods/{{ n.slug | slug }}/">
            <h3>{{ n.title }}</h3>
            {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
