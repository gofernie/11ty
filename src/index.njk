<section aria-labelledby="services">
  <h2 id="services" style="margin-top:0">Everything you need to buy in Fernie</h2>
  <div class="feature-cards">
    <article class="feature-card">
      <div class="feature-card__icon">üè°</div>
      <h3>Personalized search</h3>
      <p>Find your home, your way with customizable filters, saved searches, and smart recommendations.</p>
      <a class="btn btn-outline" href="/search/">Explore homes</a>
    </article>

    <article class="feature-card">
      <div class="feature-card__icon">üí≥</div>
      <h3>Financial tools</h3>
      <p>Buying is a big decision‚Äîestimate payments, compare scenarios, and get pre-approved online.</p>
      <a class="btn btn-outline" href="/finance/">Get pre-approved</a>
    </article>

    <article class="feature-card">
      <div class="feature-card__icon">ü§ù</div>
      <h3>Expert guidance</h3>
      <p>Matched with trusted local experts so you get the support you need, when you need it.</p>
      <a class="btn btn-outline" href="/contact/">Get connected</a>
    </article>
  </div>
</section>

<section aria-labelledby="home-neighbourhoods">
  <div style="display:flex;align-items:baseline;justify-content:space-between;gap:1rem">
    <h2 id="home-neighbourhoods">Neighbourhoods</h2>
    <a href="/neighbourhoods/">View all ‚Üí</a>
  </div>

  {% set cards = neighbourhoods | slice(0, 6) %}
  <div class="grid-tiles grid-tiles--home">
    {% for n in cards %}
      {% set slug = n.slug or (n.name | lower | replace(' ', '-') | replace('&', 'and')) %}
      {% set imgw = n.image or ("/img/neighbourhoods/" ~ slug ~ ".webp") %}
      {% set imgj = n.image_jpg or (imgw | replace('.webp','.jpg')) %}
      <article class="card">
        <a href="/neighbourhoods/{{ slug }}/" style="display:block">
          <div class="card__media">
            <picture>
              <source srcset="{{ imgw }}" type="image/webp">
              <img src="{{ imgj }}" alt="{{ n.name }}">
            </picture>
            <span class="badge">{{ n.name }}</span>
          </div>
          <div class="card__body">
            <h3 class="card__title">{{ n.name }}</h3>
            <p class="card__text">{{ n.summary }}</p>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</section>
