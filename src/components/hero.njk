{# Props: mode "full" | "thin" (default "thin"), title, img (URL) #}
{% set _mode = mode or "thin" %}
{% if _mode == "full" %}
  {% set _cls = "full-bleed hero hero--full hero--bg" %}
{% else %}
  {% set _cls = "hero hero--thin hero--bg" %}
{% endif %}

<section class="{{ _cls }}" style="{% if img %}--hero-url: url('{{ img }}');{% endif %}">
  <div class="hero__overlay"></div>
  {% if title %}
    <div class="hero__content">
      <h1 class="hero__title">{{ title }}</h1>
    </div>
  {% endif %}
</section>
