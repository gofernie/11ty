<section class="mini-cards" aria-label="Neighbourhoods">
  <h2>Explore neighbourhoods</h2>
  <div class="grid">
    {% for n in neighbourhoods | slice(0, 8) %}
      {% if n.slug %}
        <a class="card" href="/neighbourhoods/{{ n.slug }}/">
          {% if n.cardImg or n.img %}
            <img src="{{ n.cardImg or n.img }}" alt="{{ n.title or n.slug }}" loading="lazy">
          {% endif %}
          <div class="txt">
            <strong>{{ n.title or (n.slug | replace('-', ' ') | title) }}</strong>
            {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>
