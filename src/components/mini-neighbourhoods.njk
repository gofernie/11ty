{# src/components/mini-neighbourhoods.njk #}
<section class="cards">
  <h2>Popular Areas</h2>
  <div class="grid">
    {% for n in neighbourhoods | slice(0,6) %}
      {% if n.slug %}
      <a class="card" href="/neighbourhoods/{{ n.slug }}/">
        {% if n.cardImg %}
          <img src="{{ n.cardImg }}" alt="{{ n.title }}" loading="lazy" />
        {% endif %}
        <strong>{{ n.title }}</strong>
        {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
      </a>
      {% endif %}
    {% endfor %}
  </div>
</section>
