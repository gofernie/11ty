.site-header, .site-footer { padding: 1rem 0; }
.site-header .brand { font-weight: 700; margin-right: 1rem; text-decoration: none; }
.nav a { margin-right: 1rem; text-decoration: none; }
h1 { font-size: 2.2rem; margin: 0 0 0.5rem; }
p { margin: 0.5rem 0; }
a { color: #0b63ce; }
a.button { display:inline-block; padding: .6rem 1rem; border:1px solid #0b63ce; border-radius:.5rem; text-decoration:none; }
