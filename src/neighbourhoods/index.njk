---
layout: base.njk
title: Neighbourhoods
---

{% block top %}
  {% set mode = "thin" %}
  {% set title = "Neighbourhoods" %}
  {% set img = "/img/hero/fernie-hero.webp" %}
  {% include "components/hero.njk" %}
{% endblock %}

{% block content %}
  <div class="hood-grid">
    {% for n in neighbourhoods %}
      {% if n.slug %}
        <a class="hood-card" href="/neighbourhoods/{{ n.slug }}/">
          {% if n.cardImg or n.img %}
            <img src="{{ n.cardImg or n.img }}" alt="{{ n.title or n.slug }}">
          {% endif %}
          <div class="box">
            <strong>{{ n.title or (n.slug | replace('-', ' ') | title) }}</strong>
            {% if n.desc %}<p class="desc">{{ n.desc }}</p>{% endif %}
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
