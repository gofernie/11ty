layout: layouts/base
title: "Neighbourhoods"
permalink: /neighbourhoods/
---


<section class="hoods">
  <h1>Neighbourhood Guides</h1>
  <div class="cards">
    {% for n in neighbourhoods %}
      {% if n.slug %}
        <a class="card" href="/neighbourhoods/{{ n.slug | slug }}/">
          <h3>{{ n.title }}</h3>
          {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>
