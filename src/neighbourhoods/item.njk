---
layout: base
pagination:
  data: neighbourhoods
  size: 1
  alias: n

# Compute once so front-matter templating works even with pagination
eleventyComputed:
  slug: "{{ (n.slug) or ((n.name or n.title) | slug) }}"
  prettyName: "{{ (n.name) or (n.title) or ( ( (n.slug) or ((n.name or n.title) | slug) ) | replace('-', ' ') ) }}"
  blurb: "{{ (n.summary) or (n.description) or (n.subtitle) }}"
  permalink: "/neighbourhoods/{{ slug }}/"
  hero:
    src: "/img/neighbourhoods/{{ slug }}.webp"
    fallback: "/img/neighbourhoods/{{ slug }}.jpg"
    alt: "{{ prettyName }}"
    title: "{{ prettyName }}"
    subtitle: "{{ blurb }}"
    height: "60vh"
---

<section aria-labelledby="about-area">
  <h2 id="about-area">About {{ prettyName }}</h2>

  {% if blurb %}
    <p>{{ blurb }}</p>
  {% else %}
    <p>Local info coming soon.</p>
  {% endif %}

  {% if n.facts %}
  <ul>
    {% for f in n.facts %}
      <li>{{ f }}</li>
    {% endfor %}
  </ul>
  {% endif %}

  <p><a href="/neighbourhoods/">‚Üê Back to all neighbourhoods</a></p>
</section>
