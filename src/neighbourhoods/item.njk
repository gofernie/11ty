---
layout: base.njk
title: "Neighbourhood"
---

{% set pageTitle = n.title if n and n.title is defined else "Neighbourhood" %}

{# 30vh full-width header image with overlay title #}
<section class="hood-hero" {% if n.hero_image %}style="--img:url('{{ n.hero_image }}')" {% endif %} aria-label="{{ n.title }}">
  <div class="hood-hero__overlay">
    <h1 class="hood-hero__title">{{ n.title }}</h1>
  </div>
</section>

<section class="desc container">
  {% if n.desc %}
    <p class="lead">{{ n.desc }}</p>
  {% endif %}
</section>

{# Pills: decorative; accept array or CSV #}
{% set pillsArr = [] %}
{% if n.pills is defined and n.pills %}
  {% if n.pills is array %}
    {% set pillsArr = n.pills %}
  {% else %}
    {% set pillsArr = n.pills | split(',') %}
  {% endif %}
{% endif %}

{% if pillsArr and pillsArr.length %}
<section class="pills container" aria-label="Highlights">
  <ul class="pill-list">
    {% for pill in pillsArr %}
      {% set label = pill | trim %}
      {% if label %}<li class="pill">{{ label }}</li>{% endif %}
    {% endfor %}
  </ul>
</section>
{% endif %}

<section class="about container">
  {{ n.about | safe }}
</section>

<style>
/* 30vh header image */
.hood-hero{height:30vh;min-height:240px;background:var(--img, url("/img/hero/hero.webp")) center/cover no-repeat;position:relative}
.hood-hero__overlay{position:absolute;inset:0;display:grid;place-items:center;background:linear-gradient(to bottom,rgba(0,0,0,.25),rgba(0,0,0,.45))}
.hood-hero__title{color:#fff;font-size:clamp(24px,4vw,36px);line-height:1.08;text-align:center;letter-spacing:.3px;padding:.25em .6em}

/* Desc */
.container{max-width:1200px;margin:0 auto;padding:clamp(12px,2vw,24px)}
.desc .lead{font-size:clamp(18px,2.1vw,22px);text-align:center;margin:24px auto 8px;color:#111827}

/* Pills */
.pill-list{display:flex;flex-wrap:wrap;gap:8px 10px;justify-content:center;margin:14px 0 26px;padding:0;list-style:none}
.pill{background:#f3f4f6;border:1px solid var(--border);color:#374151;border-radius:9999px;padding:6px 12px;font-size:.9rem;font-weight:500;white-space:nowrap}

/* About */
.about{background:#fff;border:1px solid var(--border);border-radius:16px;padding:clamp(18px,2.4vw,28px);color:#0f172a}
.about h3{font-size:1.25rem;font-weight:600;margin:1.1rem 0 .5rem}
.about h3:first-of-type{margin-top:0}
.about p{margin:.6rem 0 1rem}
</style>
