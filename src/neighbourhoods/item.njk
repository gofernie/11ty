---
layout: base
pagination:
  data: neighbourhoods
  size: 1
  alias: n

# Use computed data so {{ ... }} gets rendered
eleventyComputed:
  slug: "{{ n.slug or (n.name | slug) }}"
  permalink: "/neighbourhoods/{{ slug }}/"
  hero:
    src: "/img/neighbourhoods/{{ slug }}.webp"
    fallback: "/img/neighbourhoods/{{ slug }}.jpg"
    alt: "{{ n.name }}"
    title: "{{ n.name }}"
    subtitle: "{{ n.summary }}"
    height: "60vh"
---

<section aria-labelledby="about-area">
  <h2 id="about-area">About {{ n.name }}</h2>

  {% if n.description %}
    <p>{{ n.description }}</p>
  {% else %}
    <p>{{ n.summary }}</p>
  {% endif %}

  {% if n.facts %}
  <ul>
    {% for f in n.facts %}
      <li>{{ f }}</li>
    {% endfor %}
  </ul>
  {% endif %}

  <p><a href="/neighbourhoods/">‚Üê Back to all neighbourhoods</a></p>
</section>
