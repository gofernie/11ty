---
layout: base
pagination:
  data: neighbourhoods
  size: 1
  alias: n

# permalink uses derived slug, so you don't need a slug column
permalink: "/neighbourhoods/{{ (n.slug or (n.name | lower | replace(' ', '-') | replace('&','and'))) }}/"

# Full-bleed hero (base.njk handles the bleed)
hero:
  src: "/img/neighbourhoods/{{ (n.slug or (n.name | lower | replace(' ', '-') | replace('&','and'))) }}.webp"
  fallback: "/img/neighbourhoods/{{ (n.slug or (n.name | lower | replace(' ', '-') | replace('&','and'))) }}.jpg"
  alt: "{{ n.name }}"
  title: "{{ n.name }}"
  subtitle: "{{ n.summary }}"
  height: 60vh
---

{# Main content (1200px container via layout) #}
<section aria-labelledby="about-area">
  <h2 id="about-area">About {{ n.name }}</h2>
  {% if n.description %}
    <p>{{ n.description }}</p>
  {% else %}
    <p>{{ n.summary }}</p>
  {% endif %}

  {# Optional: key facts if you have them in data #}
  {% if n.facts %}
  <ul>
    {% for f in n.facts %}
      <li>{{ f }}</li>
    {% endfor %}
  </ul>
  {% endif %}

  <p><a href="/neighbourhoods/">‚Üê Back to all neighbourhoods</a></p>
</section>
