---
layout: base
pagination:
  data: neighbourhoods
  size: 1
  alias: n
permalink: "/neighbourhoods/{{ n.slug }}/index.html"
eleventyComputed:
  title: "{{ n.title }}"
---

{# Detail page header like before: hero with gradient overlay #}
<section class="hero hero--detail" style="--hero-img: url('{{ n.img or "/img/placeholders/hood.jpg" }}')">
  <div class="hero__overlay"></div>
  <div class="hero__inner container">
    <p class="eyebrow">Neighbourhood</p>
    <h1 class="hero__title">{{ n.title }}</h1>
    {% if n.desc %}<p class="hero__subhead">{{ n.desc }}</p>{% endif %}
  </div>
</section>

<section class="container section about">
  {% if n.about %}
    {{ n.about | safe }}
  {% else %}
    <h3>About</h3>
    <p>Stay tunedâ€”full write-up coming soon.</p>
  {% endif %}
</section>
