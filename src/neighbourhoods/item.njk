---
layout: base.njk
pagination:
  data: neighbourhoods
  size: 1
  alias: n
permalink: "/neighbourhoods/{{ n.slug }}/"
---
{% block top %}
  {% if n.hero %}
    <section class="hero">
      <img src="{{ n.hero }}" alt="{{ n.title }} hero" loading="eager" />
    </section>
  {% endif %}
{% endblock %}

{% block content %}
  <article class="about">
    <h1>{{ n.title }}</h1>
    {% if n.desc %}<p>{{ n.desc }}</p>{% endif %}
    {% if n.img %}<p><img src="{{ n.img }}" alt="{{ n.title }}"></p>{% endif %}
    {% if n.about %}{{ n.about | safe }}{% endif %}
  </article>
{% endblock %}
