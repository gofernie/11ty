---
layout: base
pagination:
  data: neighbourhoods
  size: 1
  alias: row
permalink: "/neighbourhoods/{{ row.slug | slug }}/"
eleventyComputed:
  title: "{{ row.title }}"
---

<article class="neighbourhood">
  <p class="eyebrow">Neighbourhood</p>
  <h1>{{ row.title }}</h1>

  {% if row.desc %}
    <p class="lead">{{ row.desc }}</p>
  {% endif %}

  {% if row.about %}
    {{ row.about | safe }}
  {% endif %}

  {% if row.stats %}
    <dl class="stats">
      {% for k, v in row.stats %}
        <dt>{{ k }}</dt><dd>{{ v }}</dd>
      {% endfor %}
    </dl>
  {% endif %}

  <p><a class="btn btn--outline" href="/neighbourhoods/">‚Üê Back to all neighbourhoods</a></p>
</article>
