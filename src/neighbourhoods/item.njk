<div class="breadcrumbs"><a href="/neighbourhoods/">Neighbourhoods</a> › {{ n.title }}</div>

{% if n.hero_image %}
  {% set alt = (n.title or n.name) ~ ' hero image' %}
  <div class="heroimg" style="margin:-4px 0 10px">
    {% optimizedImage n.hero_image, alt, [800, 1200, 1600], "(max-width: 900px) 100vw, 900px" %}
  </div>
{% endif %}

<h1>{{ n.title }}</h1>
{% if n.intro %}<p class="lead">{{ n.intro }}</p>{% endif %}

{% if n.tags %}
  <div class="section" aria-label="Tags">
    {% for t in (n.tags | split(',')) %}
      {% if t | trim %}<span class="pill">{{ t | trim }}</span>{% endif %}
    {% endfor %}
  </div>
{% endif %}

<div class="section" style="display:flex; gap:10px; flex-wrap:wrap">
  <a class="btn brand" href="https://fernie.realestate/recip.html">Search Listings →</a>
  <a class="btn" href="mailto:chris@fernie.realestate?subject={{ (n.title or 'Neighbourhood') | urlencode }}%20enquiry">Ask a question</a>
</div>

{% if n.lifestyle %}<h2>Lifestyle</h2><p>{{ n.lifestyle }}</p>{% endif %}
{% if n.location  %}<h2>Location</h2><p>{{ n.location }}</p>{% endif %}
{% if n.history   %}<h2>History</h2><p>{{ n.history }}</p>{% endif %}

{% if n.schools or n.amenities or n.trails %}
  <h2>Nearby</h2>
  <ul>
    {% if n.schools   %}<li><strong>Schools:</strong> {{ n.schools }}</li>{% endif %}
    {% if n.amenities %}<li><strong>Amenities:</strong> {{ n.amenities }}</li>{% endif %}
    {% if n.trails    %}<li><strong>Trails:</strong> {{ n.trails }}</li>{% endif %}
  </ul>
{% endif %}

<div class="section" style="margin-top:18px">
  <a class="btn brand" href="https://fernie.realestate/recip.html">See current listings in {{ n.title }} →</a>
</div>
