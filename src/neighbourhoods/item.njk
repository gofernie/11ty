---
layout: base.njk
pagination:
  data: neighbourhoods
  size: 1
  alias: n
permalink: "/neighbourhoods/{{ n.slug }}/index.html"
---

{# ---------- HERO (title overlay only) ---------- #}
{% if n.hero_image %}
  {% set alt = (n.title or n.name) ~ ' hero' %}
  <div class="hero hero--detail">
    {% optimizedImage n.hero_image, alt, [1200, 1600, 2000], "(max-width: 1200px) 100vw, 1200px" %}
    <div class="overlay"><div><h1>{{ n.title }}</h1></div></div>
  </div>
{% else %}
  <h1>{{ n.title }}</h1>
{% endif %}

{# Intro copy below the hero #}
{% if n.intro %}
  <p class="lead lead--below-hero">{{ n.intro }}</p>
{% endif %}

{# ---------- Feature pills (comma-separated list) ---------- #}
{% if n.tags %}
  <div class="section" aria-label="Features">
    {% for t in (n.tags | split(',')) %}
      {% if t | trim %}<span class="pill">{{ t | trim }}</span>{% endif %}
    {% endfor %}
  </div>
{% endif %}

{# ---------- Colourful CTA cards with icons ---------- #}
<div class="cta-grid">
  <div class="cta cta--search">
    <div class="ico" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="none"><path d="M21 21l-4.2-4.2M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
    </div>
    <div>
      <h3>Search listings</h3>
      <p>See what’s available in {{ n.title }} right now.</p>
      <a class="btn brand" href="https://fernie.realestate/recip.html">Browse homes →</a>
    </div>
  </div>

  <div class="cta cta--alerts">
    <div class="ico" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="none"><path d="M15 17H5l2-2v-3a5 5 0 1 1 10 0v3l2 2h-4M9 17v1a3 3 0 1 0 6 0v-1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </div>
    <div>
      <h3>Get alerts</h3>
      <p>New listings in {{ n.title }} delivered to your inbox.</p>
      <a class="btn" href="mailto:chris@fernie.realestate?subject={{ (n.title or 'Neighbourhood') | urlencode }}%20listing%20alerts">Set up alerts →</a>
    </div>
  </div>

  <div class="cta cta--ask">
    <div class="ico" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="none"><path d="M21 8v10a2 2 0 0 1-2 2H5l-2 2V6a2 2 0 0 1 2-2h9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M15.5 3.5a2.5 2.5 0 1 0 5 0 2.5 2.5 0 0 0-5 0Z" fill="currentColor"/></svg>
    </div>
    <div>
      <h3>Ask a question</h3>
      <p>Schools, trails, commute—happy to help.</p>
      <a class="btn" href="mailto:chris@fernie.realestate?subject={{ (n.title or 'Neighbourhood') | urlencode }}%20question">Email Chris →</a>
    </div>
  </div>
</div>

{# ---------- Main description (HTML from sheet allowed) ---------- #}
{% if n.about %}
  <h2>About {{ n.title }}</h2>
  <div class="section">
    {{ n.about | safe }}
  </div>
{% endif %}
