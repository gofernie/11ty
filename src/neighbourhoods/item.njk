{# src/neighbourhoods/item.njk #}
---
layout: layouts/base
pagination:
  data: neighbourhoods
  size: 1
  alias: row
permalink: "/neighbourhoods/{{ row.slug | slug }}/"
eleventyComputed:
  title: "{{ row.title }}"
---

<article class="about">
  <h1>{{ row.title }}</h1>
  {% if row.desc %}<p class="lead">{{ row.desc }}</p>{% endif %}
  {% if row.about %}{{ row.about | safe }}{% endif %}
</article>
