{# layouts/base.njk #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or "Fernie Real Estate" }}</title>
  <style>
    :root { --ink:#0f172a; }
    * { box-sizing: border-box; }
    html,body { margin:0; padding:0; }
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji","Segoe UI Emoji", "Segoe UI Symbol"; color:var(--ink); background:#fff; }

    .container { max-width:1100px; margin-inline:auto; padding-inline:clamp(16px,3vw,28px); }

    /* Full-bleed hero */
    .hero {
      position: relative; width:100%; min-height: clamp(48vh, 62vh, 72vh);
      overflow: clip; isolation: isolate;
    }
    .hero img { position:absolute; inset:0; width:100%; height:100%; object-fit:cover; display:block; }
    .hero::after{
      content:""; position:absolute; inset:0;
      background: linear-gradient(to top, rgba(0,0,0,.55), rgba(0,0,0,.10) 40%, rgba(0,0,0,0));
      z-index:1;
    }
    .hero .overlay{
      position:relative; z-index:2; height:100%; display:grid; place-items:end start;
      padding: clamp(16px, 4vw, 48px);
    }
    .hero h1{
      margin:0; color:#fff; font-weight:800; letter-spacing:.2px;
      font-size: clamp(2rem, 4.2vw, 3.25rem); line-height:1.05;
      text-shadow: 0 2px 16px rgba(0,0,0,.45);
    }

    .section-title{
      font-size: clamp(1.25rem, 2.5vw, 1.75rem);
      margin: clamp(18px, 3.5vw, 28px) 0 12px;
      font-weight:700;
    }

    /* Mini grid */
    .grid{
      list-style:none; padding:0; margin:12px 0 48px;
      display:grid; gap:clamp(14px,2.5vw,22px);
      grid-template-columns:repeat(1, minmax(0,1fr));
    }
    @media(min-width:640px){ .grid{ grid-template-columns:repeat(2, minmax(0,1fr)); } }
    @media(min-width:960px){ .grid{ grid-template-columns:repeat(4, minmax(0,1fr)); } }

    .card{
      background:#fff; border-radius:18px; overflow:hidden;
      box-shadow:0 1px 1px rgba(0,0,0,.04), 0 8px 24px rgba(0,0,0,.06);
      transition: transform .22s ease, box-shadow .22s ease; will-change:transform;
    }
    .card:hover{ transform:translateY(-4px); box-shadow:0 2px 4px rgba(0,0,0,.05), 0 20px 40px rgba(0,0,0,.12); }
    .card-link{ display:grid; text-decoration:none; color:inherit; }

    .media{ position:relative; aspect-ratio:4/3; overflow:hidden; background:#e8eef2; }
    .media img{ width:100%; height:100%; object-fit:cover; display:block; transition:transform .35s ease; }
    .card:hover .media img{ transform:scale(1.05); }
    .media-fallback{ width:100%; height:100%; display:grid; place-items:center; font-size:2rem; font-weight:700; color:#fff; background:linear-gradient(135deg,#175b7a,#0ea5a3); }

    .body{ padding:12px 14px 16px; }
    .name{ font-size:1.05rem; margin:2px 0 6px; font-weight:700; }
    .desc{
      margin:0; color:#475569; font-size:.95rem; line-height:1.35;
      display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden;
    }
  </style>
</head>
<body>
  {{ content | safe }}
</body>
</html>
