{# index.njk #}
---
layout: layouts/base.njk
title: Fernie Real Estate
---

<section class="hero" aria-labelledby="hero-title">
  <img
    src="https://private-office.myrealpage.com/w/w=chris-crump2.myrealpagewebsite.com,m=__manage__/_media/quick-uploads/stock/ty1.jpeg?inline=true"
    alt="Fernie, BC — mountain real estate"
    decoding="async"
    fetchpriority="high"
  />
  <div class="overlay">
    <h1 id="hero-title">Fernie Real Estate</h1>
  </div>
</section>

<section class="container" aria-labelledby="neigh-title">
  <h2 id="neigh-title" class="section-title">Neighbourhoods</h2>

  {% set items = neighbourhoods | slice(0, 8) %}
  <ul class="grid" role="list">
    {% for r in items %}
      {% set slug = (r.slug or "") | trim %}
      {% set title = (r.title or slug | replace("-", " ") ) | title %}
      {% set img = (r.hero_image or "") | trim %}
      {% set desc = (r.description or "") | trim %}
      <li class="card">
        <a class="card-link" href="/neighbourhoods/{{ slug }}/">
          <div class="media">
            {% if img %}
              <img src="{{ img }}" alt="{{ title }} — Fernie neighbourhood" loading="lazy" decoding="async" />
            {% else %}
              <div class="media-fallback" aria-hidden="true">{{ title | first | upper }}</div>
            {% endif %}
          </div>
          <div class="body">
            <h3 class="name">{{ title }}</h3>
            {% if desc %}<p class="desc">{{ desc }}</p>{% endif %}
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
