---
layout: layouts/base.njk
title: Fernie Real Estate
---

<section class="hero" aria-labelledby="hero-title">
  <img
    src="https://private-office.myrealpage.com/w/w=chris-crump2.myrealpagewebsite.com,m=__manage__/_media/quick-uploads/stock/ty1.jpeg?inline=true"
    alt="Fernie, BC — mountain real estate"
    decoding="async"
    fetchpriority="high"
  />
  <div class="overlay">
    <h1 id="hero-title">Fernie Real Estate</h1>
  </div>
</section>

<section class="container" aria-labelledby="neigh-title">
  <h2 id="neigh-title" class="section-title">Neighbourhoods</h2>

  <ul class="grid" role="list">
    {# render only the first 8 without using slice() #}
    {% for r in neighbourhoods %}
      {% if loop.index <= 8 %}
        {% set slug = (r.slug | trim) %}
        {% set displayTitle = r.title ? (r.title | trim) : (slug | replace('-', ' ') | trim) %}
        {% set img = r.hero_image ? (r.hero_image | trim) : '' %}
        {% set desc = r.description ? (r.description | trim) : '' %}

        <li class="card">
          <a class="card-link" href="/neighbourhoods/{{ slug }}/">
            <div class="media">
              {% if img %}
                <img src="{{ img }}" alt="{{ displayTitle }} — Fernie neighbourhood" loading="lazy" decoding="async">
              {% else %}
                <div class="media-fallback" aria-hidden="true">{{ displayTitle }}</div>
              {% endif %}
            </div>
            <div class="body">
              <h3 class="name">{{ displayTitle }}</h3>
              {% if desc %}<p class="desc">{{ desc }}</p>{% endif %}
            </div>
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</section>
